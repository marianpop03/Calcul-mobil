<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/sym_def_app_icon"
            android:layout_marginBottom="16dp"
            android:contentDescription="Profile Icon"/>

        <TextView
            android:id="@+id/tvProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="24dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#E3F2FD"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balanța Curentă (Portofel)"
                    android:textSize="14sp"
                    android:textColor="#1565C0"/>

                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Checking..."
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#0D47A1"
                    android:layout_marginTop="4dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <Button
                        android:id="@+id/btnDeposit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Depune"
                        android:backgroundTint="#4CAF50"
                        android:layout_marginEnd="4dp"
                        android:textColor="#FFFFFF"/>

                    <Button
                        android:id="@+id/btnWithdraw"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Retrage"
                        android:backgroundTint="#FF9800"
                        android:layout_marginStart="4dp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnCollect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Colectează Dobânzi"
                    android:backgroundTint="#673AB7"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvPending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profit în așteptare: 0 RON"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"
                    android:textColor="#757575"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#E8F5E9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Investit Istoric"
                    android:textSize="14sp"
                    android:textColor="#2E7D32"/>

                <TextView
                    android:id="@+id/tvInvested"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Checking..."
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#1B5E20"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/btnOpenChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vezi Grafic Statistici"
            android:backgroundTint="#009688"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deconectare"
            android:backgroundTint="#F44336"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>
</ScrollView>